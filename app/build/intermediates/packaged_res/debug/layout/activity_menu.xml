<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="1400dp"
        android:layout_height="891dp"
        android:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondomenu" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="414dp"
        android:layout_height="114dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="192dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            app:srcCompat="@drawable/cyberpunk_edgerunners_logo" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuario"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="214dp"
        android:layout_height="453dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        app:layout_constraintEnd_toEndOf="@+id/imageView15"
        app:layout_constraintHorizontal_bias="0.699"
        app:layout_constraintStart_toStartOf="@+id/imageView15"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.125">

        <Button
            android:id="@+id/boton_informacion"
            android:layout_width="140dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#8BC34A"
            android:foregroundGravity="center_horizontal"
            android:gravity="center|center_horizontal"
            android:onClick="launchInformacionActivity"
            android:text="@string/main_informacion" />

        <Button
            android:id="@+id/boton_personajes"
            android:layout_width="140dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#03A9F4"
            android:onClick="launchPersonajesActivity"
            android:text="@string/main_personajes" />

        <Button
            android:id="@+id/boton_jugar"
            android:layout_width="140dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:backgroundTint="#a2b516"
            android:onClick="launchPlayGameActivity"
            android:text="@string/lanzar_juego" />

    </LinearLayout>

    <!--boton de ranking-->

    <Button
            android:id="@+id/boton_ranking"
            android:layout_width="122dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="#a2b516"
            android:onClick="launchRankingActivity"
            android:text="@string/lanzar_ranking"
            tools:layout_editor_absoluteY="617dp"
            tools:layout_editor_absoluteX="16dp"></Button>

    <Button
        android:id="@+id/exit"
        android:layout_width="101dp"
        android:layout_height="41dp"
        android:onClick="exit"
        android:backgroundTint="@color/black"
        android:text="@string/exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.948"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

</androidx.constraintlayout.widget.ConstraintLayout>