<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">


    <!--Boton de regreso  -->
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="74dp"
            android:layout_height="61dp"
            android:src="@drawable/back"
            android:onClick="Volver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

    <!--imagen del personaje  -->
    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="142dp"
            android:layout_height="142dp"
            android:src="@drawable/icono_droide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="132dp"/>
    <!--nombre del personaje  -->
    <TextView
            android:id="@+id/textView"
            android:layout_width="193dp"
            android:layout_height="56dp"
            android:text="Heroe ejemplo"
            android:textSize="24sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="180dp"
            android:layout_marginStart="108dp"/>
    <!--nivel del personaje  -->
    <TextView
            android:id="@+id/textViewNivel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nivel: 1"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="244dp"
            android:layout_marginStart="176dp"/>
    <!--vida del personaje  -->
    <TextView
            android:id="@+id/textViewVida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vida: 100"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="276dp"
            android:layout_marginStart="168dp"/>
    <!--ataque del personaje  -->
    <TextView
            android:id="@+id/textViewAtaque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ataque: 10"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp"
            android:layout_marginStart="160dp"/>
    <!--defensa del personaje  -->
    <TextView
            android:id="@+id/textViewDefensa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Defensa: 10"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="324dp"
            android:layout_marginStart="160dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>